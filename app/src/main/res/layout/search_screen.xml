<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/checkboxTimeFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TimeFilter"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/checkboxGeoLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="GeoLocation"
        app:layout_constraintTop_toBottomOf="@+id/checkboxTimeFilter"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxKeyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keyword"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/checkboxGeoLocation"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/buttonStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="StartDate"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonEndDate"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/buttonEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="EndDate"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/inputKeyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint=""
        android:layout_marginRight="11dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="191dp" />

    <Button
        android:id="@+id/buttonSearchFor"
        android:layout_width="138dp"
        android:layout_height="51dp"
        android:text="Search!"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.691"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.744"
        tools:layout_editor_absoluteY="321dp"
        tools:layout_editor_absoluteX="179dp" />

    <Button
        android:id="@+id/buttonReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="return"
        android:layout_marginLeft="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="148dp"
        android:onClick="returnToGallery"
        app:layout_constraintRight_toLeftOf="@+id/buttonSearchFor"
        android:layout_marginRight="8dp" />


</android.support.constraint.ConstraintLayout>